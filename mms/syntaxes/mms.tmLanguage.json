{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "MMS",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#macros"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.mms",
					"match": "(?i)\\bDEPENDS_ON\\b|\\.IF|\\.ELSE|\\.ENDIF|\\.SUFFIXES"
				}
			]
		},
		"macros": {
			"patterns": [
				{
					"match": "^\\s*(\\S*)\\s*=",
					"captures": {
						"1": {
							"name": "entity.name.class"
						}
					}
				},
				{
					"match": "(\\$\\()(\\S*)(\\))",
					"captures": {
						"1": {
							"name": "constant.regexp"
						},
						"2": {
							"name": "entity.name.class"
						},
						"3": {
							"name": "constant.regexp"
						}
					}
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.mms",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.mms",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.mms",
					"begin": "!",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.mms"
						}
					},
					"end": "(?=$)"
				}
			]
		}
	},
	"scopeName": "source.mms"
}