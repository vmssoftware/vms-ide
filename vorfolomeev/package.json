{
    "name": "vms",
    "displayName": "VMS",
    "description": "",
    "version": "0.0.2",
    "publisher": "vorfol",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:VMS.buildProject",
        "onCommand:VMS.syncProject",
        "onCommand:VMS.downloadProject",
        "onCommand:VMS.editProject"
    ],
    "main": "./out/extension",
    "contributes": {
        "menus": {
            "commandPalette": [
                {
                    "command": "VMS.buildProject",
                    "when": "config.open-vms.common.build-enabled"
                }
            ]
        },
        "commands": [
            {
                "command": "VMS.buildProject",
                "title": "%command.buildProject.title%",
                "category": "%command.category%"
            },
            {
                "command": "VMS.syncProject",
                "title": "%command.syncProject.title%",
                "category": "%command.category%"
            },
            {
                "command": "VMS.downloadProject",
                "title": "%command.downloadProject.title%",
                "category": "%command.category%"
            },
            {
                "command": "VMS.editProject",
                "title": "%command.editProject.title%",
                "category": "%command.category%"
            }
        ],
        "configuration": {
            "title": "%configuration.title%",
            "properties": {
                "open-vms.common.build-enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "%properties.common.build-enabled.description%"
                },
                "open-vms.shell.ending": {
                    "type": "string",
                    "default": "> ",
                    "description": "%properties.shell.ending.description%"
                },
                "open-vms.connection.host": {
                    "type": "string",
                    "default": "host",
                    "description": "%properties.connection.host.description%"
                },
                "open-vms.connection.port": {
                    "type": "number",
                    "default": 22,
                    "description": "%properties.connection.port.description%"
                },
                "open-vms.connection.username": {
                    "type": "string",
                    "default": "",
                    "description": "%properties.connection.username.description%"
                },
                "open-vms.connection.password": {
                    "type": "string",
                    "default": "",
                    "description": "%properties.connection.password.description%"
                },
                "open-vms.project.root": {
                    "type": "string",
                    "default": "project",
                    "description": "%properties.project.root.description%"
                },
                "open-vms.project.exclude": {
                    "type": "string",
                    "default": "**/{.vscode,node-modules}",
                    "description": "%properties.project.exclude.description%"
                },
                "open-vms.project.source": {
                    "type": "string",
                    "default": "**/*.{c,cpp}",
                    "description": "%properties.project.source.description%"
                },
                "open-vms.project.headers": {
                    "type": "string",
                    "default": "**/*.{h,hpp}",
                    "description": "%properties.project.headers.description%"
                },
                "open-vms.project.resource": {
                    "type": "string",
                    "default": "**/resource/**/*.*",
                    "description": "%properties.project.resource.description%"
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "extensionDependencies": [
        "vorfol.config-helper"
    ],
    "dependencies": {
        "fast-glob": "^2.2.3",
        "fs": "0.0.1-security",
        "micromatch": "^3.1.10",
        "ssh2": "^0.6.1",
        "vscode-nls": "^4.0.0"
    },
    "devDependencies": {
        "@types/micromatch": "^3.1.0",
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.12.0",
        "@types/ssh2": "^0.5.36",
        "tslint": "^5.11.0",
        "typescript": "^3.1.3",
        "vscode": "^1.1.21"
    }
}
