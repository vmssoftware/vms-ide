{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "CLD",
    "patterns": [
        {
            "include": "#statement"
        }
    ],
    "repository": {
        "statement": {
            "patterns": [
                {
                    "include": "#define"
                },
                {
                    "include": "#comment"
                }
            ]
        },
        "define": {
            "name": "define",
            "begin": "(?i)define",
            "beginCaptures": {
                "0": {
                    "name": "markup.bold"
                }
            },
            "end": "(?!\\G)",
            "patterns": [
                {
                    "include": "#define.body"
                }
            ]
        },
        "define.body": {
            "patterns": [
                {
                    "include": "#define.syntax"
                },
                {
                    "include": "#comment"
                },
                {
                    "name": "space",
                    "begin": "\\s+",
                    "end": "(?i)(?<=\\S)(?=\\s)",
                    "patterns": 
                    [
                        {
                            "include": "#define.body"
                        }
                    ]
                }
            ]
        },
        "define.syntax": {
            "name": "syntax",
            "begin": "(?i)syntax",
            "beginCaptures": {
                "0": {
                    "name": "constant.numeric"
                }
            },
            "end": "(?!\\G)",
            "patterns": [
                {
                    "include": "#define.syntax.body"
                }
            ]
        },
        "define.syntax.body": {
            "patterns": [
                {
                    "include": "#name"
                },
                {
                    "include": "#comment"
                },
                {
                    "name": "space",
                    "begin": "\\s+",
                    "end": "(?i)(?<=\\S)(?=\\s)",
                    "patterns": 
                    [
                        {
                            "include": "#define.syntax.body"
                        }
                    ]
                }
            ]
        },
        "string": {
            "name": "string.quoted.cld",
            "begin": "\"",
            "end": "\"(?=[^\"])",
            "patterns": [
                {
                    "name": "constant.character.escape.cld",
                    "match": "\"\""
                }
            ]
        },
        "name": 
        {
            "patterns": 
            [
                {
                    "name": "name",
                    "match": "(?i)[a-z$][a-z$_0-9]*",
                    "captures": {
                        "0":
                        {
                            "name": "markup.italic"
                        }
                    }
                }
            ]
        },
        "comment": 
        {
            "patterns": 
            [
                {
                    "name": "comment.line.cld",
                    "begin": "!",
                    "end": "\\n"
                }
            ]
        }
    },
    "scopeName": "source.cld"
}