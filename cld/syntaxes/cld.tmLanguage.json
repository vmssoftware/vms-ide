{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json"
    ,"name": "CLD"
    ,"patterns": [
        {
            "include": "#statement"
        }
    ]
    ,"repository": {
        "statement": {
            "patterns": [
                {
                    "include": "#define"
                }
                ,{
                    "include": "#comment"
                }
                ,{
                    "include": "#string"
                }
            ]
        }
        ,"define": {
            "name": "define"
            ,"begin": "(?i)define"
            ,"beginCaptures": {
                "0": {
                    "name": "markup.bold"
                }
            }
            ,"end": "(?=define)"
            ,"patterns": [
                {
                    "include": "#define.body"
                }
            ]
        }
        ,"define.body": {
            "patterns": [
                {
                    "include": "#syntax"
                }
                ,{
                    "include": "#nodisallows"
                }
                ,{
                    "include": "#image"
                }
                ,{
                    "include": "#comment"
                }
            ]
        }
        ,"syntax": {
            "name": "syntax"
            ,"begin": "(?i)syntax"
            ,"beginCaptures": {
                "0": {
                    "name": "constant.numeric"
                }
            }
            ,"end": "(?<=\\S)(?!\\G)"
            ,"patterns": [
                {
                    "include": "#name"
                }
                ,{
                    "include": "#comment"
                }
                ,{
                    "include": "#space"
                }
            ]
        }
        ,"nodisallows": 
        {
            "patterns": 
            [
                {
                    "name": "nodisallows"
                    ,"match": "(?i)nodisallows"
                    ,"captures": {
                        "0":
                        {
                            "name": "constant.character"
                        }
                    }
                }
            ]
        }
        ,"string": {
            "name": "string.quoted.cld"
            ,"begin": "\""
            ,"end": "\"(?=[^\"])"
            ,"patterns": [
                {
                    "name": "constant.character.escape.cld"
                    ,"match": "\"\""
                }
            ]
        }
        ,"name": 
        {
            "patterns": 
            [
                {
                    "name": "name"
                    ,"match": "(?i)[a-z$][a-z$_0-9]*"
                    ,"captures": {
                        "0":
                        {
                            "name": "markup.italic"
                        }
                    }
                }
            ]
        }
        ,"comment": 
        {
            "patterns": 
            [
                {
                    "name": "comment.line.cld"
                    ,"begin": "!"
                    ,"end": "\\n"
                }
            ]
        }
        ,"space": 
        {
            "patterns": 
            [
                {
                    "name": "space"
                    ,"begin": "\\s"
                    ,"end": "(?=\\S)"
                }
            ]
        }
    }
    ,"scopeName": "source.cld"
}