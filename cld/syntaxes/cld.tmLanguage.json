{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CLD",
	"patterns": 
	[
		{
			"include": "#statement"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#space"
		}
	],
	"repository": 
	{
		"space":
		{
			"patterns": 
			[
				{
					"name":"cld.space",
					"begin":"\\s",
					"end":"(?=\\S)"
				}
			]
		},
		"statement": 
		{
			"patterns": 
			[
				{
					"include": "#statement.define"
				}
			]
		},
		"statement.define":
		{
			"name": "statement.define",
			"begin" : "(?i)\\s*define\\s*",
			"beginCaptures" : 
			{
			  "0" : 
			  {
				"name" : "markup.bold"
			  }
			},
			"end" : "(?=[\\s,\\n])",
			"patterns": 
			[
				{
					"include": "#statement.define.syntax"
				},
				{
					"include": "#space"
				},
				{
					"include": "#comment"
				}
			]
		},
		"statement.define.syntax":
		{
			"name": "statement.define.syntax",
			"begin": "(?i)\\s*syntax\\s*",
			"end": "(?=[\\s,\\n])",
			"patterns": 
			[
				{
					"include": "#name"
				},
				{
					"include": "#space"
				},
				{
					"include": "#comment"
				}
			]
		},
		"string": 
		{
			"name": "string.quoted.cld",
			"begin": "\"",
			"end": "\"(?=[^\"])",
			"patterns": 
			[
				{
					"name": "constant.character.escape.cld",
					"match": "\"\""
				}
			]
		},
		"comment":
		{
			"patterns": 
			[
				{
					"name": "comment.line",
					"begin": "\\s*!",
					"end": "\\n"
				}
			]
		},
		"name":
		{
			"patterns": 
			[
				{
					"name": "constant.numeric",
					"match": "\\s*[a-zA-Z$][a-zA-Z$_0-9]*\\s*"
				}
			]
		}
	},
	"scopeName": "source.cld"
}
