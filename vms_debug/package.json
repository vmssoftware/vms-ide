{
	"name": "vms-debug",
	"displayName": "VMS C Debug",
	"version": "0.27.2",
	"publisher": "vmssoftware",
	"description": "The extension for developing debug adapters for VS Code.",
	"author": {
		"name": "VMS Software",
		"email": "akulikovskiy@vmssoftware.com"
	},
	"license": "MIT",
	"keywords": [
		"does not multi-root ready"
	],
	"engines": {
		"vscode": "^1.28.0",
		"node": "^8.x.x"
	},
	"icon": "images/mock-debug-icon.png",
	"categories": [
		"Debuggers",
		"Other"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://host/project.git"
	},
	"bugs": {
		"url": "https://host/project/issues"
	},
	"scripts": {
		"get-ext-api": "PowerShell copy -Path ..\\ssh-helper\\out\\api.d.ts, ..\\ssh-helper\\out\\ssh-helper.d.ts, ..\\config-helper\\out\\config\\config.d.ts -Destination src\\ext-api",
		"prepublish": "tsc -p ./",
		"compile": "tsc -p ./",
		"tslint": "tslint ./**/*.ts",
		"watch": "tsc -w -p ./",
		"test": "mocha -u tdd ./out/tests/",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/mocha": "^5.x.x",
		"@types/node": "^8.10.36",
		"tslint": "^5.11.0",
		"typescript": "^3.x.x",
		"vscode": "^1.1.21"
	},
	"dependencies": {
		"@vorfol/common": "0.0.11",
		"await-notify": "^1.0.1",
		"del": "^3.0.0",
		"gulp": "^3.9.1",
		"gulp-typescript": "^5.0.0-alpha.3",
		"net": "^1.0.2",
		"run-sequence": "^2.2.1",
		"ssh2": "^0.6.1",
		"vsce": "^1.52.0",
		"vscode-debugadapter": "^1.32.1",
		"vscode-debugadapter-testsupport": "1.27.0",
		"vscode-nls": "^4.0.0",
		"vscode-nls-dev": "^3.2.0"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug",
		"onCommand:extension.vms-debug.connect",
		"onCommand:extension.vms-debug.compile",
		"onCommand:extension.vms-debug.run",
		"onCommand:extension.vms-debug.getProgramName"
	],
	"contributes": {
		"commands": [
			{
				"command": "extension.vms-debug.connect",
				"title": "%extension.vms_connect%",
				"category": "%command.category%"
			},
			{
				"command": "extension.vms-debug.compile",
				"title": "%extension.vms_compile%",
				"category": "%command.category%"
			},
			{
				"command": "extension.vms-debug.run",
				"title": "%extension.vms_run%",
				"category": "%command.category%"
			}
		],
		"breakpoints": [
			{
				"language": "c"
			},
			{
				"language": "cpp"
			}
		],
		"debuggers": [
			{
				"type": "vms_dbg",
				"label": "%extension.vms_c_debug%",
				"program": "./out/debugAdapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a text file.",
								"default": "${workspaceFolder}/${command:AskForProgramName}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "vms_dbg",
						"request": "launch",
						"name": "Ask for file name",
						"program": "${workspaceFolder}/${command:AskForProgramName}",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "VMS C Debug: Launch",
						"description": "A new configuration for 'debugging' a user selected markdown file.",
						"body": {
							"type": "vms_dbg",
							"request": "launch",
							"name": "Ask for file name",
							"program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
							"stopOnEntry": true
						}
					}
				],
				"variables": {
					"AskForProgramName": "extension.vms-debug.getProgramName"
				}
			}
		]
	}
}
